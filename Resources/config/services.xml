<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service
                id="jasperreport.factory"
                class="Sigedi\JasperReportBundle\Factory"
                shared="false">
        </service>

        <service
                id="jasperreport.client"
                class="Jaspersoft\Client\Client"
                shared="true">
            <factory service="jasperreport.factory" method="getClient"/>
        </service>

        <service
                id="jasperreport.reportservice"
                class="Sigedi\JasperReportBundle\ReportService"
                shared="true">
            <factory service="jasperreport.factory" method="getReportService"/>
        </service>

        <service id="Sigedi\JasperReportBundle\ReportService" alias="jasperreport.reportservice" />

        <service
                id="jasperreport.importexportservice"
                class="Sigedi\JasperReportBundle\ImportExportService"
                shared="true">
            <factory service="jasperreport.factory" method="getImportExportService"/>
        </service>

        <service id="Sigedi\JasperReportBundle\ImportExportService" alias="jasperreport.importexportservice" />

        <service
                id="jasperreport.repositoryservice"
                class="Sigedi\JasperReportBundle\RepositoryService"
                shared="true">
            <factory service="jasperreport.factory" method="getRepositoryService"/>
        </service>

        <service id="Sigedi\JasperReportBundle\RepositoryService" alias="jasperreport.repositoryservice" />

        <service id="Sigedi\JasperReportBundle\Command\SearchRepositoryCommand">
            <argument type="service" id="jasperreport.repositoryservice" />
            <tag name="console.command"/>
        </service>

        <service id="Sigedi\JasperReportBundle\Command\ExportResourceCommand">
            <argument type="service" id="jasperreport.importexportservice" />
            <tag name="console.command"/>
        </service>

        <service id="Sigedi\JasperReportBundle\Command\ImportResourceCommand">
            <argument type="service" id="jasperreport.importexportservice" />
            <tag name="console.command"/>
        </service>

    </services>
</container>