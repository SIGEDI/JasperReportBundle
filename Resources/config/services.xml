<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service
                id="jasperreport.factory"
                class="Sigedi\JasperReportBundleFactory"
                shared="false">
        </service>

        <service
                id="jasperreport.client"
                class="Jaspersoft\Client\Client"
                shared="true">
            <factory service="jasperreport.factory" method="getClient"/>
        </service>

        <service
                id="jasperreport.reportservice"
                class="Sigedi\JasperReportBundleReportService"
                shared="true">
            <factory service="jasperreport.factory" method="getReportService"/>
        </service>

        <service id="Sigedi\JasperReportBundleReportService" alias="jasperreport.reportservice" />

        <service
                id="jasperreport.importexportservice"
                class="Sigedi\JasperReportBundleImportExportService"
                shared="true">
            <factory service="jasperreport.factory" method="getImportExportService"/>
        </service>

        <service id="Sigedi\JasperReportBundleImportExportService" alias="jasperreport.importexportservice" />

        <service
                id="jasperreport.repositoryservice"
                class="Sigedi\JasperReportBundleRepositoryService"
                shared="true">
            <factory service="jasperreport.factory" method="getRepositoryService"/>
        </service>

        <service id="Sigedi\JasperReportBundleRepositoryService" alias="jasperreport.repositoryservice" />

        <service id="Sigedi\JasperReportBundleCommand\SearchRepositoryCommand">
            <argument type="service" id="jasperreport.repositoryservice" />
            <tag name="console.command"/>
        </service>

        <service id="Sigedi\JasperReportBundleCommand\ExportResourceCommand">
            <argument type="service" id="jasperreport.importexportservice" />
            <tag name="console.command"/>
        </service>

        <service id="Sigedi\JasperReportBundleCommand\ImportResourceCommand">
            <argument type="service" id="jasperreport.importexportservice" />
            <tag name="console.command"/>
        </service>

    </services>
</container>